<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<Button android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Install a kernel"
		android:layout_gravity="right" android:layout_weight="0.2" android:id="@+id/installKernel" />

	<Button android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Backup kernel"
		android:layout_gravity="right" android:layout_weight="0.2"
		android:id="@+id/backupKernel" />

	<Button android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Backup kernel"
		android:layout_gravity="right" android:layout_weight="0.2"
		android:id="@+id/getLatestVoodoo" />

</LinearLayout>