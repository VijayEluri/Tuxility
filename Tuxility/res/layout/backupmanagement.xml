<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="wrap_content">

	<Button android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="Backup settings.db" 
		android:layout_weight="0.2" android:id="@+id/backupSettingsDB" />
	
	<Button android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="Restore settings.db" android:layout_gravity="right"
		android:layout_weight="0.2" android:id="@+id/restoreSettingsDB" />

	<Button android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="Backup /efs" android:layout_gravity="right"
		android:layout_weight="0.2" android:id="@+id/backupEFS" />

	<Button android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:text="Restore /efs" android:layout_gravity="right"
		android:layout_weight="0.2" android:id="@+id/restoreEFS" />

</LinearLayout>