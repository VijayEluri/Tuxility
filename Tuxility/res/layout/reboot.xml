<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">

	<Button android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Normal reboot"
		android:layout_gravity="right" android:layout_weight="0.2" android:id="@+id/normalReboot" />

	<Button android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Recovery mode"
		android:layout_gravity="right" android:layout_weight="0.2"
		android:id="@+id/recoveryMode" />

	<Button android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="Download mode"
		android:layout_gravity="right" android:layout_weight="0.2"
		android:id="@+id/downloadMode" />

</LinearLayout>